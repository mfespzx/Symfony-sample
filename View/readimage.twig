<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="icon" href="/template/default/img/common/favicon.ico">
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="/template/default/js/jquery.mousewheel.min.js"></script>
<script src="/template/default/js/three.min.js"></script>
<script src="/template/default/js/jquery.onebook3d-2.3.0-full-min.js"></script>
<script>
$(function(){
    var ht = $('body').height();
    var src = [
{% for pimage in pimages %}
'https://www.tabinohon.com/upload/portfolio_image/{{ pid }}/{{ pimage.file_name }}',
{% endfor %}
];
    if (src.length > 0) {
        $('#mybook').onebook(src,{startPage:1, border:0, pageColor:'white'});
    } else {
        $('#mybook').html('画像データ未登録');
    }
//    $('#mybook').css('margin-top', (ht / 2) + 'px');
});
</script>
<style>
body { width: 100%; height: 100%; background: #aaa; margin:0; padding:0; text-align: center; }
#mybook {
    width: 98%;
    margin: 0px auto;
    padding: 0;
    color: white;
}
#name { display: inline-block; margin: 100px auto 8px auto; color: white;}
</style>
</head>
<body>
<span id="name">作品名：{{ name }}</span>
<div id="mybook"></div>
</body>
</html>
